# Server Configuration
NODE_ENV=development
PORT=5000
API_VERSION=v1

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/novacv
MONGODB_TEST_URI=mongodb://localhost:27017/novacv_test

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Paddle Configuration (Modern SDK)
PADDLE_API_KEY=your-paddle-api-key-from-seller-dashboard
PADDLE_ENVIRONMENT=sandbox
PADDLE_WEBHOOK_SECRET=your-paddle-webhook-secret

# Paddle Price IDs (not product IDs - use Price IDs from modern dashboard)
PADDLE_BASIC_PLAN_ID=pri_basic_plan_price_id
PADDLE_PRO_PLAN_ID=pri_pro_plan_price_id

# Legacy (deprecated - for reference only)
# PADDLE_VENDOR_ID=no-longer-used-in-modern-sdk
# PADDLE_PUBLIC_KEY=replaced-by-webhook-secret

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Frontend URL (for redirects)
FRONTEND_URL=http://localhost:3000

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log
